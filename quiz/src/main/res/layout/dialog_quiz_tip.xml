<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialogBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_48"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_28"
        app:bl_corners_radius="@dimen/dp_8"
        app:bl_solid_color="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_6"
            android:text="@string/bible_tip"
            android:textStyle="bold"
            android:textColor="#333"
            android:textSize="@dimen/dp_18"
            app:layout_constraintEnd_toEndOf="@+id/dialogBg"
            app:layout_constraintStart_toStartOf="@+id/dialogBg"
            app:layout_constraintTop_toTopOf="@+id/dialogBg" />

        <TextView
            android:id="@+id/msgTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_6"
            android:text="@string/bible_cancel"
            android:textColor="@color/color_66"
            android:textSize="@dimen/dp_14"
            app:layout_constraintEnd_toEndOf="@+id/dialogBg"
            app:layout_constraintStart_toStartOf="@+id/dialogBg"
            app:layout_constraintTop_toBottomOf="@+id/titleTv" />

        <TextView
            android:id="@+id/cancelTv"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_32"
            android:background="@drawable/bg_btn_stroke"
            android:fontFamily="@font/montserrat_semi_bold"
            android:gravity="center"
            android:text="@string/bible_cancel"
            android:textSize="@dimen/dp_18"
            app:bl_text_gradient_endColor="#9B80FC"
            app:bl_text_gradient_orientation="horizontal"
            app:bl_text_gradient_startColor="#6BE7FF"
            app:layout_constraintEnd_toStartOf="@+id/sureTv"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/msgTv" />

        <TextView
            android:id="@+id/sureTv"
            style="@style/BtnStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:layout_marginStart="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_32"
            android:gravity="center"
            android:text="@string/bible_ok"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_18"
            app:bl_corners_radius="@dimen/dp_30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cancelTv"
            app:layout_constraintTop_toBottomOf="@+id/msgTv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>