<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="150" android:exitFadeDuration="150">
    <item android:state_selected="true">
        <shape>
            <stroke android:width="2dp" android:color="@color/colorPrimary" />
            <solid android:color="#80008B5B" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="2dp" android:color="#6D6D6D" />
            <solid android:color="#806D6D6D" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="#806D6D6D" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>