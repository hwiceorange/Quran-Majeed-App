<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@integer/intBGTransition"
    android:exitFadeDuration="@integer/intBGTransition">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="?colorControlHighlight" />
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="?colorControlHighlight" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/colorBGCardVariable" />
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="@color/colorDividerCardOnlyLight" />
        </shape>
    </item>
</selector>