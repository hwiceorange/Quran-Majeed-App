<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="BlackWhite">@color/colorBlack</item>
        <item name="WhiteBlack">@color/colorWhite</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="CBack">#EDEDED</item>
        <item name="chipStyle">@style/Chip_Style</item>
        <item name="toolbarStyle">@style/ToolBarLight</item>
        <item name="android:actionOverflowButtonStyle">@style/MyTheme</item>
        <item name="playbutton">@color/colorPrimary</item>
    </style>
    <style name="LaunchTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor" >?attr/colorPrimary</item>

    </style>

    <style name="MyTheme" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more</item>

    </style>

    <style name="Theme.HadithPro" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/uthman</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F3EBE0</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">#49454F</item>

        <item name="colorOutline">#C4C7C5</item>

        <!-- Customize your theme here. -->

        <item name="colorAccent">?attr/colorPrimary</item>

        <item name="backgroundColor">#F5F6F8</item>

        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#151D2C</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>

        <item name="colorError">#FF1611</item>
    </style>


    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="BlackWhite">@color/colorWhite</item>
        <item name="WhiteBlack">@color/colorBlack</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="CBack">#292929</item>
        <item name="chipStyle">@style/Chip_Style</item>
        <item name="toolbarStyle">@style/ToolBarLight</item>
        <item name="playbutton">@color/white</item>
    </style>
    <style name="Chip_Style" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_chip_color</item>
        <item name="android:textColor">@color/text_chip_color</item>
        <item name="checkedIconVisible">true</item>
        <item name="checkedIcon">@drawable/check_circle_white</item>
    </style>
    <style name="ToolBarLight" parent="Widget.AppCompat.Toolbar">
        <item name="popupMenuStyle">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:listPreferredItemHeightSmall">60dp</item>
        <item name="listPreferredItemHeightSmall">60dp</item>
        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">8dp</item>
        <item name="listPreferredItemPaddingLeft">8dp</item>
        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="ToolBarDark" parent="Widget.AppCompat.Toolbar">
        <item name="popupMenuStyle">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">

        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/colorAccent</item>

    </style>


    <!-- For converting Relative Layout to act like a Button-->
    <style name="ButtonStyle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/juz_btn_selector</item>
        <item name="android:textSize">@dimen/tab_text</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">100dp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!-- For the English TextViews inside the converted Layout-->
    <style name="btnTxtViewStyle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">26dp</item>
        <item name="android:paddingLeft">10dp</item>>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- For Arabic Text View inside the converted Layout-->
    <style name="arbBtnTxtViewStyle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">29dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:focusable">true</item>

    </style>

    <style name="AppTheme.PopupOverlay">
    </style>
    <style name="Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="CardView">
    </style>
    <style name="CardView.Dark">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>
    <style name="CardView.Light">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>
    <style name="MyTabTextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

</resources>