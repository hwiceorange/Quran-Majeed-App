<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="82dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="4dp"
    android:foreground="?selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#40838383"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkbox"
        android:buttonTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="310dp"
        app:layout_goneMarginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="25dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/page"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="8dp"
        android:text="Page"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="14dp"
        android:textColor="@color/text_clr"
        android:gravity="center"
        android:fontFamily="@font/open_sans_semibold"
        />

    <TextView
        android:id="@+id/bookmark_page"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="10dp"
        android:text="500"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_clr"
        android:gravity="center"
        android:fontFamily="@font/open_sans_semibold" />

    <TextView
        android:id="@+id/shape"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="10dp"
        android:text=""
        android:layout_marginStart="14dp"
        android:textColor="@color/text_clr"
        android:gravity="center"
        android:fontFamily="@font/open_sans_semibold"
        android:background="@drawable/count"/>

    <LinearLayout
        android:id="@+id/name_layout_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/bookmark_page"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/bookmark_surah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Al Faatiha"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/text_clr"/>

        <TextView
            android:id="@+id/juzno"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="Juz :"
            android:layout_marginTop="1dp"
            android:textAllCaps="true"/>
        <TextView
            android:visibility="visible"
            android:id="@+id/bookmark_juz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="Juz :"
            android:layout_marginTop="-14dp"
            android:layout_marginStart="26dp"
            android:textAllCaps="true"/>

    </LinearLayout>





    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#40838383"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
