<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#41966F"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <!-- Skip Button -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp">
        
        <TextView
            android:id="@+id/btnSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="skip"
            android:textColor="#80FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </FrameLayout>

    <!-- Center Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="24dp">

        <!-- Quran Logo -->
        <ImageView
            android:id="@+id/imgQuranLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/quran_kareem"
            android:contentDescription="@string/app_name"
            android:layout_marginBottom="8dp"
            app:tint="#FFFFFF" />

        <!-- QURAN Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QURAN"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:fontFamily="@font/people"
            android:letterSpacing="0.15"
            android:layout_marginBottom="48dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep Your Data Safe!"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log in to save and synchronize your bookmarked verses and Quran activity across all your devices."
            android:textColor="#E0FFFFFF"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4dp"
            android:gravity="center"
            android:layout_marginBottom="48dp" />

        <!-- Google Sign In Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnGoogleSignIn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#FFFFFF"
                android:paddingHorizontal="24dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/google"
                    android:contentDescription="Google Logo"
                    android:layout_marginEnd="12dp"
                    android:elevation="0dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sign in with Google"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Privacy Policy -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We respect your privacy. Check out our "
            android:textColor="#E0FFFFFF"
            android:textSize="12sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/tvPrivacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Policy"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

</LinearLayout>

