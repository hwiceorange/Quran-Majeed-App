<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Prayer Info Card with Quick Navigation
    - Displays next prayer time and location
    - Contains 4 quick access buttons: Prayer, Quran, Learn, Tools
    - Half-overlaps the Header background (controlled by negative margin in parent layout)
-->
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prayer_card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/prayer_card_background"
        android:padding="20dp">

        <!-- Top Section: Prayer Time Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Left: Clock Icon & Prayer Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icon_clock"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_clock_simple"
                    app:tint="#FFA726"
                    android:contentDescription="@string/time" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_next_prayer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maghrib"
                        android:textColor="#4B9B76"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        tools:text="Maghrib" />

                    <TextView
                        android:id="@+id/tv_next_prayer_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15:06 WIB"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="15:06 WIB" />

                </LinearLayout>

            </LinearLayout>

            <!-- Right: Location -->
            <LinearLayout
                android:id="@+id/location_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_location"
                    app:tint="#FFA726"
                    android:contentDescription="@string/location" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lokasi Anda"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_location_prayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yogyakarta"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="Yogyakarta" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Time Remaining (Countdown Timer) -->
        <TextView
            android:id="@+id/tv_time_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2:43:8"
            android:textColor="#FFA726"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:visibility="visible"
            tools:text="2:43:8" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#E0E0E0" />

        <!-- Bottom Section: Quick Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <!-- Prayer Icon -->
            <LinearLayout
                android:id="@+id/btn_nav_prayer"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/nav_button_background"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_prayer"
                    app:tint="#4B9B76"
                    android:contentDescription="@string/prayer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/prayer"
                    android:textColor="#4B9B76"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <!-- Quran Icon -->
            <LinearLayout
                android:id="@+id/btn_nav_quran"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/nav_button_background"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_quran_home"
                    app:tint="#4B9B76"
                    android:contentDescription="@string/quran_reader" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/quran"
                    android:textColor="#4B9B76"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <!-- Learn Icon -->
            <LinearLayout
                android:id="@+id/btn_nav_learn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/nav_button_background"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_99"
                    app:tint="#4B9B76"
                    android:contentDescription="@string/learn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/learn"
                    android:textColor="#4B9B76"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <!-- Tools Icon -->
            <LinearLayout
                android:id="@+id/btn_nav_tools"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/nav_button_background"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_more"
                    app:tint="#4B9B76"
                    android:contentDescription="@string/tools" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/tools"
                    android:textColor="#4B9B76"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

