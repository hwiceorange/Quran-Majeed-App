<?xml version="1.0" encoding="utf-8"?>
<!-- Streak Card showing user's learning streak and monthly progress -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/streak_card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="#4B9B76"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Background mosque pattern (optional, can use drawable) -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:alpha="0.15"
            android:src="@drawable/mosque_pattern"
            android:contentDescription="Background pattern" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header with Settings Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/streak"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:alpha="0.9" />

                <ImageView
                    android:id="@+id/iv_streak_settings"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_settings"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@android:color/white"
                    android:contentDescription="Settings" />

            </LinearLayout>

            <!-- Streak Days -->
            <TextView
                android:id="@+id/tv_streak_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Days"
                android:textColor="@android:color/white"
                android:textSize="48sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Monthly Goal Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/monthly_goal"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:alpha="0.9" />

                <TextView
                    android:id="@+id/tv_monthly_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 / 31"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/pb_monthly_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="0"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_monthly"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>






