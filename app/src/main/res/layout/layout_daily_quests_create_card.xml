<?xml version="1.0" encoding="utf-8"?>
<!-- Card displayed when user hasn't created a learning plan yet -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="8dp">

    <!-- Title Outside Card (Black Text) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/daily_quests"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="4dp" />

    <!-- Green Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/daily_quests_create_card_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#5FA882"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp">

        <!-- Content Container (Horizontal) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Icon with white square background -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="14dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rectangle_13"
                    android:scaleType="fitXY"
                    android:contentDescription="Background" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Quran icon"
                    android:padding="18dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/image_11_2" />

            </FrameLayout>

            <!-- Text and Button Container -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Subtitle -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_quests_description"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="12dp" />

                <!-- Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_create_plan"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/create_learning_plan"
                    android:textColor="#5FA882"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:backgroundTint="@android:color/white"
                    app:cornerRadius="24dp"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>





