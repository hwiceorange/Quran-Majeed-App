<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="#4B9B76"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verse_of_day"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- Embed VOTDView for content (will be styled) -->
        <com.quran.quranaudio.online.quran_module.views.VOTDView
            android:id="@+id/votd_view_embedded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Content Container (will be populated from VOTDView) -->
        <TextView
            android:id="@+id/votd_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Bottom Section: Reference and Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Verse Reference - Clickable with underline -->
            <TextView
                android:id="@+id/votd_verse_reference"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Loading..."
                android:textColor="@android:color/white"
                android:textSize="@dimen/dmnCommonSize3"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <!-- Share Icon -->
            <ImageView
                android:id="@+id/votd_share"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_share"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@android:color/white"
                android:contentDescription="Share verse"
                android:layout_marginEnd="8dp" />

            <!-- Bookmark Icon -->
            <ImageView
                android:id="@+id/votd_bookmark"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/dr_icon_bookmark_outlined"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@android:color/white"
                android:contentDescription="Bookmark verse" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
