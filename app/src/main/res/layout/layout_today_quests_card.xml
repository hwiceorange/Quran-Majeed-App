<?xml version="1.0" encoding="utf-8"?>
<!-- Today's Quests Card showing daily tasks -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/today_quests_card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/todays_quests"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Task 1: Quran Reading -->
    <androidx.cardview.widget.CardView
        android:id="@+id/quest_task_1_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#4B9B76"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Icon Container -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circular_white_background">

                <ImageView
                    android:id="@+id/iv_task_1_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_book_open"
                    app:tint="#4B9B76"
                    android:contentDescription="Quran Reading" />

            </FrameLayout>

            <!-- Text Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tv_task_1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quran_reading"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_task_1_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read 10 verses"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:alpha="0.9"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Action Button / Completed Icon -->
            <FrameLayout
                android:id="@+id/task_1_action_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_task_1_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/go"
                    android:textColor="#4B9B76"
                    android:backgroundTint="@android:color/white"
                    app:cornerRadius="20dp"
                    android:minWidth="64dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

                <ImageView
                    android:id="@+id/iv_task_1_completed"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@android:color/white"
                    android:visibility="gone"
                    android:contentDescription="Completed" />

            </FrameLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Task 2: Tajweed Practice -->
    <androidx.cardview.widget.CardView
        android:id="@+id/quest_task_2_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#4B9B76"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circular_white_background">

                <ImageView
                    android:id="@+id/iv_task_2_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_headphones"
                    app:tint="#4B9B76"
                    android:contentDescription="Tajweed Practice" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tv_task_2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tajweed_practice"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_task_2_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Practice 15 minutes"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:alpha="0.9"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/task_2_action_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_task_2_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/go"
                    android:textColor="#4B9B76"
                    android:backgroundTint="@android:color/white"
                    app:cornerRadius="20dp"
                    android:minWidth="64dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

                <ImageView
                    android:id="@+id/iv_task_2_completed"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@android:color/white"
                    android:visibility="gone"
                    android:contentDescription="Completed" />

            </FrameLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Task 3: Dhikr (Conditional based on config) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/quest_task_3_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#4B9B76"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circular_white_background">

                <ImageView
                    android:id="@+id/iv_task_3_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_dua"
                    app:tint="#4B9B76"
                    android:contentDescription="Dhikr" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tv_task_3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dhikr"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_task_3_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete 50 Dhikr"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:alpha="0.9"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/task_3_action_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_task_3_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/go"
                    android:textColor="#4B9B76"
                    android:backgroundTint="@android:color/white"
                    app:cornerRadius="20dp"
                    android:minWidth="64dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

                <ImageView
                    android:id="@+id/iv_task_3_completed"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@android:color/white"
                    android:visibility="gone"
                    android:contentDescription="Completed" />

            </FrameLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>






