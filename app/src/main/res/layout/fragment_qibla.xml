<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    android:id="@+id/qibla_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#f5f5f5">

    <!-- Main compass area -->
    <FrameLayout
        android:id="@+id/compass_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#f5f5f5">

        <ImageView
            android:id="@+id/compass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="50dp"
            android:src="@drawable/compass_1" />

        <ImageView
            android:id="@+id/compass_k"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/compass_1_k" />

        <!-- Calibration status indicator (improved design) -->
        <FrameLayout
            android:id="@+id/calibration_status_container"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="4dp">

            <!-- Circular background -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/calibration_indicator_background"
                android:scaleType="fitXY" />

            <!-- Status indicator dot (top-right corner) -->
            <View
                android:id="@+id/calibration_indicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/calibration_status_red" />

            <!-- Field strength text container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_calibration_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Field"
                    android:textSize="10sp"
                    android:textColor="#888888"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_magnetic_strength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weak"
                    android:textSize="12sp"
                    android:textColor="#FF4444"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>
        </FrameLayout>

        <!-- Calibration prompt (hidden by default) -->
        <LinearLayout
            android:id="@+id/calibration_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@color/orange"
            android:orientation="horizontal"
            android:padding="12dp"
            android:visibility="gone"
            android:gravity="center">

                               <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="⚠️ Magnetic interference detected, calibrate compass for accuracy"
                       android:textColor="@android:color/white"
                       android:textSize="12sp" />

                   <TextView
                       android:id="@+id/btn_calibrate"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@android:color/white"
                       android:text="Calibrate"
                       android:textColor="@color/orange"
                       android:padding="8dp"
                       android:layout_marginStart="8dp"
                       android:textStyle="bold"
                       android:textSize="12sp" />
        </LinearLayout>

        <!-- Device tilt warning -->
        <TextView
            android:id="@+id/tv_tilt_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFEB3B"
            android:padding="8dp"
            android:text="Keep device level"
            android:textColor="#F57F17"
            android:textSize="12sp"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Direction and Distance Info Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Direction text -->
        <TextView
            android:id="@+id/tv_direction_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QIBLAH FROM THE NORTH"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp" />

        <!-- Direction degree -->
        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-81.2°"
            android:textSize="24sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Distance label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISTANCE"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp" />

        <!-- Distance value -->
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7383.5 kms"
            android:textSize="18sp"
            android:textColor="#000"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Compass skin selector -->
    <LinearLayout
        android:id="@+id/list_compass_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_compass"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
